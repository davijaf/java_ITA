import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

class TestesIdadeSigno {
	
	@Test
	void testIdade1() {
		Pessoa pessoa=new Pessoa("31/10/1966");
		assertEquals(pessoa.getIdade(), 56);
		
	}
	@Test
	void testSigno1() {
		Pessoa pessoa=new Pessoa("31/10/1966");
		assertTrue(pessoa.getSigno()=="Escorpi√£o");

	}
	@Test
	void testIdade2() {
		Pessoa pessoa=new Pessoa("25/07/2020");
		assertEquals(pessoa.getIdade(), 02);
	}
	
	@Test
	void testSigno2() {
		Pessoa pessoa=new Pessoa("25/07/2020");
		assertTrue(pessoa.getSigno()=="Leao");
}
	@Test
	void testIdade3() {
		Pessoa pessoa=new Pessoa("01/01/1996");
		assertEquals(pessoa.getIdade(), 26);
	}
	
	@Test
	void testSigno3() {
		Pessoa pessoa=new Pessoa("01/01/1996");
		assertTrue(pessoa.getSigno()=="Capricornio");
		
	}
}
